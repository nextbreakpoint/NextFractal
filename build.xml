				<arg value="--type" />
				<arg value="app-image" />
				<arg value="--app-version" />
				<arg value="${nextfractal.version}" />
				<arg value="--dest" />
				<arg value="@{destdir}" />
				<arg value="--copyright" />
				<arg value="${copyright}" />
				<arg value="--verbose" />
				<arg value="--app-content" />
				<arg value="@{basedir}/build/@{os}_@{arch}/app" />
				<arg value="--app-content" />
				<arg value="@{basedir}/resources/examples" />
